@model Chef
@* <a asp-action="Index" asp-controller="" >Dishes</a> *@

<h2 class="text-center">Add a Chef!</h2>

<form asp-action="CreateChef" asp-controller="Chef">

<div class="form-row">
    <div class="form-group col-md-6">
        <label asp-for="FirstName">FirstName</label>
        <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
        <input asp-for="FirstName" type="text" class="form-control"  placeholder="FirstName">
    </div>
    <div class="form-group col-md-6">
        <label asp-for="LastName">LastName</label>
        <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
        <input asp-for="LastName" type="text" class="form-control"  placeholder="LastName">
    </div>

    <div class="form-group col-md-6">
        <label asp-for="DOB">DOB</label>
        <span asp-validation-for="DOB" class="text-danger font-weight-bold"></span>
        <input asp-for="DOB" type="date" class="form-control"  placeholder="DOB">
    </div>    
</div>

<button type="submit" class="btn btn-danger">Add Chef</button>

</form>

