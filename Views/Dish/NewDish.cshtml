@model Dish
@using ChefAndDishes.Models;
@* @{
    ViewData["Title"] = "Create Dish";
} *@

<form asp-action="CreateDish" asp-controller="Dish">
<div class="form-row">

    <div class="form-group col-md-6">
        <label asp-for="Name">Name</label>
        <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
        <input asp-for="Name" type="text" class="form-control"  placeholder="Name">
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Calories">Calories</label>
        <span asp-validation-for="Calories" class="text-danger font-weight-bold"></span>
        <input asp-for="Calories" type="number" class="form-control"  placeholder="Calories">
    </div>

    <div class="form-group col-md-12">
        <label asp-for="Description">Description</label>
        <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
        <textarea asp-for="Description" type="text" class="form-control"  placeholder="Description"></textarea>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="Tastiness">Tastiness</label>
        <span asp-validation-for="Tastiness" class="text-danger font-weight-bold"></span>
        <select asp-for="Tastiness" >
            <option selected>Choose...</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="ChefId">Chef</label>
        <select asp-for="ChefId" >
          @foreach (var ch in @ViewBag.AllChefs)
          {
            <option value="@ch.ChefId">@ch.FullName()</option> 
          } 
        </select> 
    </div>
</div>

  <button type="submit" class="btn btn-danger">Add Dish</button>
</form>